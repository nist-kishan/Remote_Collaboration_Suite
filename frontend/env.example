# =============================================================================
# Remote Work Collaboration Suite - Frontend Environment Variables
# =============================================================================
# Copy this file to .env and fill in your actual values
# DO NOT commit the .env file to version control

# =============================================================================
# API CONFIGURATION
# =============================================================================
# Backend API base URL
VITE_API_BASE_URL=http://localhost:5000

# API timeout in milliseconds
VITE_API_TIMEOUT=30000

# API retry attempts for failed requests
VITE_API_RETRY_ATTEMPTS=3

# API retry delay in milliseconds
VITE_API_RETRY_DELAY=1000

# API endpoints
VITE_API_AUTH_ENDPOINT=/api/auth
VITE_API_USERS_ENDPOINT=/api/users
VITE_API_PROJECTS_ENDPOINT=/api/projects
VITE_API_TASKS_ENDPOINT=/api/tasks
VITE_API_CHAT_ENDPOINT=/api/chat
VITE_API_DOCUMENTS_ENDPOINT=/api/documents
VITE_API_WHITEBOARD_ENDPOINT=/api/whiteboard
VITE_API_CALLS_ENDPOINT=/api/calls
VITE_API_NOTIFICATIONS_ENDPOINT=/api/notifications

# =============================================================================
# SOCKET.IO CONFIGURATION
# =============================================================================
# Socket.IO server URL (usually same as API base URL)
VITE_SOCKET_URL=http://localhost:5000

# Socket reconnection attempts
VITE_SOCKET_RECONNECTION_ATTEMPTS=5

# Socket reconnection delay in milliseconds
VITE_SOCKET_RECONNECTION_DELAY=1000

# Socket timeout in milliseconds
VITE_SOCKET_TIMEOUT=20000

# Socket transports
VITE_SOCKET_TRANSPORTS=websocket,polling

# =============================================================================
# APPLICATION METADATA
# =============================================================================
# Application information
VITE_APP_NAME=Remote Work Collaboration Suite
VITE_APP_VERSION=1.0.0
VITE_APP_DESCRIPTION=Real-time collaboration platform for remote teams
VITE_APP_AUTHOR=Your Name
VITE_APP_CONTACT_EMAIL=contact@example.com
VITE_APP_WEBSITE=https://your-website.com

# Application branding
VITE_APP_LOGO=/logo.png
VITE_APP_FAVICON=/favicon.png
VITE_APP_THEME_COLOR=#3b82f6

# =============================================================================
# FEATURE FLAGS
# =============================================================================
# Enable/disable features
VITE_ENABLE_ANALYTICS=false
VITE_ENABLE_DEBUG_MODE=true
VITE_ENABLE_PERFORMANCE_MONITORING=false
VITE_ENABLE_ERROR_REPORTING=false
VITE_ENABLE_HOT_RELOAD=true
VITE_ENABLE_SOURCE_MAPS=true

# Chat features
VITE_ENABLE_CHAT=true
VITE_ENABLE_CHAT_NOTIFICATIONS=true
VITE_ENABLE_CHAT_TYPING_INDICATOR=true
VITE_ENABLE_CHAT_MESSAGE_STATUS=true

# Video call features
VITE_ENABLE_VIDEO_CALLS=true
VITE_ENABLE_SCREEN_SHARING=true
VITE_ENABLE_CALL_RECORDING=false

# Document features
VITE_ENABLE_DOCUMENT_EDITING=true
VITE_ENABLE_DOCUMENT_COLLABORATION=true
VITE_ENABLE_DOCUMENT_VERSIONING=true

# Whiteboard features
VITE_ENABLE_WHITEBOARD=true
VITE_ENABLE_WHITEBOARD_COLLABORATION=true

# Project management features
VITE_ENABLE_PROJECT_MANAGEMENT=true
VITE_ENABLE_TASK_MANAGEMENT=true
VITE_ENABLE_KANBAN_BOARD=true

# =============================================================================
# FILE UPLOAD CONFIGURATION
# =============================================================================
# Maximum file size in bytes (default: 10MB)
VITE_MAX_FILE_SIZE=10485760

# Allowed file types (comma-separated)
VITE_ALLOWED_FILE_TYPES=image/jpeg,image/png,image/gif,image/webp,application/pdf,text/plain,application/msword,application/vnd.openxmlformats-officedocument.wordprocessingml.document,application/vnd.ms-excel,application/vnd.openxmlformats-officedocument.spreadsheetml.sheet

# File upload chunk size in bytes
VITE_UPLOAD_CHUNK_SIZE=1048576

# File upload progress update interval
VITE_UPLOAD_PROGRESS_INTERVAL=100

# =============================================================================
# PERFORMANCE CONFIGURATION
# =============================================================================
# Debounce delay for search inputs (milliseconds)
VITE_DEBOUNCE_DELAY=300

# Throttle delay for scroll events (milliseconds)
VITE_THROTTLE_DELAY=100

# Cache duration in milliseconds (default: 5 minutes)
VITE_CACHE_DURATION=300000

# Virtual scrolling threshold
VITE_VIRTUAL_SCROLL_THRESHOLD=100

# Image lazy loading threshold
VITE_LAZY_LOAD_THRESHOLD=200

# =============================================================================
# SECURITY CONFIGURATION
# =============================================================================
# Session timeout in milliseconds (default: 24 hours)
VITE_SESSION_TIMEOUT=86400000

# Maximum login attempts before lockout
VITE_MAX_LOGIN_ATTEMPTS=5

# Minimum password length
VITE_PASSWORD_MIN_LENGTH=8

# Password requirements
VITE_PASSWORD_REQUIRE_UPPERCASE=true
VITE_PASSWORD_REQUIRE_LOWERCASE=true
VITE_PASSWORD_REQUIRE_NUMBERS=true
VITE_PASSWORD_REQUIRE_SYMBOLS=true

# Content Security Policy
VITE_CSP_ENABLED=true
VITE_CSP_REPORT_URI=

# =============================================================================
# LOGGING CONFIGURATION
# =============================================================================
# Log level: debug, info, warn, error
VITE_LOG_LEVEL=debug

# Enable console logging
VITE_ENABLE_CONSOLE_LOGS=true

# Enable remote logging (for production error tracking)
VITE_ENABLE_REMOTE_LOGGING=false

# Log retention period in days
VITE_LOG_RETENTION_DAYS=7

# =============================================================================
# UI/UX CONFIGURATION
# =============================================================================
# Theme settings
VITE_DEFAULT_THEME=light
VITE_ENABLE_DARK_MODE=true
VITE_ENABLE_THEME_PERSISTENCE=true

# Language settings
VITE_DEFAULT_LANGUAGE=en
VITE_ENABLE_I18N=true
VITE_SUPPORTED_LANGUAGES=en,es,fr,de,it,pt,ru,ja,ko,zh

# Animation settings
VITE_ENABLE_ANIMATIONS=true
VITE_ANIMATION_DURATION=300
VITE_REDUCED_MOTION=false

# Layout settings
VITE_SIDEBAR_WIDTH=280
VITE_HEADER_HEIGHT=64
VITE_FOOTER_HEIGHT=48

# =============================================================================
# THIRD-PARTY SERVICES
# =============================================================================
# Analytics and monitoring services
VITE_GOOGLE_ANALYTICS_ID=
VITE_GOOGLE_TAG_MANAGER_ID=
VITE_SENTRY_DSN=
VITE_HOTJAR_ID=
VITE_MIXPANEL_TOKEN=

# Social login providers
VITE_GOOGLE_CLIENT_ID=
VITE_FACEBOOK_APP_ID=
VITE_MICROSOFT_CLIENT_ID=
VITE_GITHUB_CLIENT_ID=

# Payment providers (if applicable)
VITE_STRIPE_PUBLISHABLE_KEY=
VITE_PAYPAL_CLIENT_ID=

# =============================================================================
# DEVELOPMENT SETTINGS
# =============================================================================
# Enable development mode features
VITE_DEV_MODE=true

# Enable hot reload
VITE_HOT_RELOAD=true

# Enable source maps
VITE_SOURCE_MAPS=true

# Development server settings
VITE_DEV_SERVER_PORT=5173
VITE_DEV_SERVER_HOST=localhost
VITE_DEV_SERVER_HTTPS=false

# Mock API settings
VITE_ENABLE_MOCK_API=false
VITE_MOCK_API_DELAY=500

# =============================================================================
# PRODUCTION SETTINGS
# =============================================================================
# In production, ensure these are set:
# - VITE_API_BASE_URL pointing to your production backend
# - VITE_SOCKET_URL pointing to your production backend
# - VITE_ENABLE_DEBUG_MODE=false
# - VITE_LOG_LEVEL=error
# - VITE_ENABLE_CONSOLE_LOGS=false
# - VITE_ENABLE_SOURCE_MAPS=false
# - VITE_DEV_MODE=false

# Build settings
VITE_BUILD_SOURCEMAP=false
VITE_BUILD_MINIFY=true
VITE_BUILD_COMPRESS=true

# =============================================================================
# CLOUD DEPLOYMENT (RENDER)
# =============================================================================
# For Render deployment, these will be automatically set:
# VITE_API_BASE_URL=https://your-backend-app.onrender.com
# VITE_SOCKET_URL=https://your-backend-app.onrender.com

# Render specific settings
VITE_RENDER_ENVIRONMENT=production
VITE_RENDER_URL=https://your-frontend-app.onrender.com

# =============================================================================
# PWA CONFIGURATION
# =============================================================================
# Progressive Web App settings
VITE_PWA_ENABLED=true
VITE_PWA_NAME=Remote Collaboration Suite
VITE_PWA_SHORT_NAME=RC Suite
VITE_PWA_DESCRIPTION=Real-time collaboration platform
VITE_PWA_THEME_COLOR=#3b82f6
VITE_PWA_BACKGROUND_COLOR=#ffffff
VITE_PWA_DISPLAY=standalone
VITE_PWA_ORIENTATION=portrait

# Service worker settings
VITE_SW_ENABLED=true
VITE_SW_CACHE_STRATEGY=cacheFirst
VITE_SW_CACHE_MAX_AGE=86400000

# =============================================================================
# NOTIFICATION CONFIGURATION
# =============================================================================
# Browser notification settings
VITE_ENABLE_BROWSER_NOTIFICATIONS=true
VITE_NOTIFICATION_PERMISSION_REQUEST=true
VITE_NOTIFICATION_SOUND_ENABLED=true
VITE_NOTIFICATION_VIBRATION_ENABLED=true

# Push notification settings
VITE_PUSH_NOTIFICATIONS_ENABLED=false
VITE_PUSH_VAPID_PUBLIC_KEY=

# =============================================================================
# REAL-TIME FEATURES
# =============================================================================
# Real-time update intervals
VITE_REALTIME_UPDATE_INTERVAL=1000
VITE_TYPING_INDICATOR_TIMEOUT=3000
VITE_PRESENCE_UPDATE_INTERVAL=30000

# WebRTC settings
VITE_WEBRTC_ICE_SERVERS=stun:stun.l.google.com:19302
VITE_WEBRTC_CONFIGURATION=

# Call settings
VITE_CALL_TIMEOUT_MS=45000
VITE_CALL_MAX_PARTICIPANTS=10
VITE_CALL_SCREEN_SHARING_ENABLED=true

# =============================================================================
# ACCESSIBILITY CONFIGURATION
# =============================================================================
# Accessibility features
VITE_ENABLE_KEYBOARD_NAVIGATION=true
VITE_ENABLE_SCREEN_READER_SUPPORT=true
VITE_ENABLE_HIGH_CONTRAST=false
VITE_ENABLE_FOCUS_INDICATORS=true

# =============================================================================
# TESTING CONFIGURATION
# =============================================================================
# Testing settings
VITE_ENABLE_TEST_MODE=false
VITE_TEST_USER_EMAIL=test@example.com
VITE_TEST_USER_PASSWORD=test123

# E2E testing
VITE_E2E_ENABLED=false
VITE_E2E_BASE_URL=http://localhost:5173

# =============================================================================
# NOTES
# =============================================================================
# 1. All VITE_ prefixed variables are available in the browser
# 2. Never commit .env file to version control
# 3. Use environment-specific values for development, staging, and production
# 4. Restart the development server after changing environment variables
# 5. For production builds, ensure all required variables are set
# 6. Use HTTPS in production environments
# 7. Configure proper CORS settings on the backend
# 8. Test all features in different environments
# 9. Monitor performance and error rates in production
# 10. Keep sensitive keys secure and rotate them regularly